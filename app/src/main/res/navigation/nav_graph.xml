<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tabFragment">

    <fragment
        android:id="@+id/tabFragment"
        android:name="com.duke.elliot.kim.kotlin.photodiary.tab.TabFragment"
        android:label="TabFragment"
        tools:layout="@layout/fragment_tab_layout">
        <action
            android:id="@+id/action_tabFragment_to_diaryWritingFragment"
            app:destination="@id/diaryWritingFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/diaryWritingFragment"
        android:name="com.duke.elliot.kim.kotlin.photodiary.diary.DiaryWritingFragment"
        android:label="DiaryWritingFragment"
        tools:layout="@layout/fragment_diary_writing">
        <action
            android:id="@+id/action_diaryWritingFragment_to_audioRecordingFragment"
            app:destination="@id/audioRecordingFragment" />
    </fragment>
    <fragment
        android:id="@+id/audioRecordingFragment"
        android:name="com.duke.elliot.kim.kotlin.photodiary.diary.media.audio.AudioRecordingFragment"
        android:label="AudioRecordingFragment" />
</navigation>