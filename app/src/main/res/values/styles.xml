<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="fontFamily">@font/font_family_cookie_run</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>

        <item name="actionBarTheme">@style/ToolbarTheme</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/colorFragmentBackgroundLight</item>
        <item name="closeIcon" tools:ignore="PrivateResource">
            @drawable/ic_mtrl_chip_close_circle</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconTint">@color/colorChip</item>
        <item name="closeIconVisible">true</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorToolbarTitle</item>
        <item name="android:textColorPrimary">@color/colorToolbarTitle</item>
        <item name="android:textColorSecondary">@color/colorToolbarTitle</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorSimpleCropViewTextPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ChipFontStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/colorChip</item>
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
    </style>
</resources>