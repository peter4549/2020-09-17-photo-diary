<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="fontFamily">@font/font_family_cookie_run</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>

        <item name="actionBarTheme">@style/ToolbarTheme</item>

        <!-- Lock Screen -->
        <item name="pf_lock_screen">@style/LockScreenStyle</item >
        <item name="pf_fingerprint_button">@style/LockScreenFingerprintButtonStyle</item>
        <item name="pf_key_button">@style/LockScreenButtonStyle</item>
        <item name="pf_delete_button">@style/LockScreenDeleteButtonStyle</item>
        <item name="pf_next">@style/LockNextButtonStyle</item>
        <item name="pf_hint">@style/LockHintStyle</item>
        <item name="pf_code_view">@style/LockScreenCodeStyle</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/colorFragmentBackgroundLight</item>
        <item name="closeIcon" tools:ignore="PrivateResource">
            @drawable/ic_mtrl_chip_close_circle</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconTint">@color/colorChip</item>
        <item name="closeIconVisible">true</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorToolbarTitle</item>
        <item name="android:textColorPrimary">@color/colorToolbarTitle</item>
        <item name="android:textColorSecondary">@color/colorToolbarTitle</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorSimpleCropViewTextPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ChipFontStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/colorChip</item>
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Lock Screen -->
    <style name="LockScreenStyle">
        <item name="android:background">@color/colorLockScreenBackground</item>
    </style>

    <style name="LockScreenFingerprintButtonStyle">
        <item name="android:tint">@color/color_text_dark</item>
        <item name="android:background">@drawable/lock_screen_button_ripple</item>
    </style>

    <style name="LockScreenButtonStyle">
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/lock_screen_button_ripple</item>
    </style>

    <style name="LockScreenDeleteButtonStyle">
        <item name="android:tint">@color/color_text_dark</item>
        <item name="android:background">@drawable/lock_screen_button_ripple</item>
    </style>

    <style name="LockNextButtonStyle">
        <item name="android:foreground">@drawable/lock_screen_button_ripple_without_background</item>
        <item name="android:backgroundTint">@color/colorLockScreenNextButton</item>
        <item name="android:drawableLeft">@drawable/ic_sharp_check_circle_27</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">48dp</item>
    </style>

    <style name="LockHintStyle">
        <item name="android:background">@drawable/lock_screen_button_ripple</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LockScreenCodeStyle">
        <item name="android:button">@drawable/lock_screen_code_selector</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Cookie Run Font -->
    <style name="CookieRunFontFamilyStyle">
        <item name="android:fontFamily">@font/font_family_cookie_run</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>